@model ShoppingCart.Models.Cart
@{ 
    Layout= "~/Views/Shared/_Layout.cshtml"; 
} 

@section Title {
    <a class="navbar-brand" href="#">View Cart</a>
}

@section NavLink1 {
    <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Continue Shopping</a>
}

@section NavLink2 {
    <a class="nav-link text-dark" asp-controller="Cart" asp-action="Checkout">Checkout</a>
}

@section NavbarText {
    @if (Model != null && Model.CartDetails.Count() != 0) {
        <a id="totalPrice" class="nav-link text-dark">Total: $@Model.Total</a>
    }
    else {
        <a id="totalPrice" class="nav-link text-dark"></a>
    }
}

@if (Model == null) {
    <div class="container" id="cart"></div>
}
else if (Model.CartDetails.Count() == 0) {
    <h1 class="mt-4">Sorry, nothing is in your cart.</h1>
}else {
    <div class="container">
        @foreach (var cartDetail in Model.CartDetails)
        {
            <div class="row mt-4 product" data-value=@cartDetail.ProductId>
                <div class="card col-6 h-100 w-75 border-secondary p-0">
                    <div class="card-header bg-transparent border-secondary h-75">
                        <img src="~/img/@cartDetail.Product.Image" class="card-img-top h-100"/>
                    </div>
                    <div class="card-body h-30">
                        <h5 class="card-title">@cartDetail.Product.Name</h5>
                        <p class="card-text mb-0 overflow-hidden w-75 text-left pr-2">@cartDetail.Product.Description</p>
                    </div>
                </div>
                <div class="col-6">
                    <div class="container h-100 pl-5">
                        <div class="row h-50 align-content-end">
                            <div class="col-4">
                                <h5 class="card-title">Price: </h5>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title price">$@(cartDetail.Product.Price * cartDetail.Qty)</h5>
                            </div> 
                        </div>
                        <div class="row h-50 align-content-start">
                            <div class="col-4 my-auto">
                                <h5 class="card-title my-0">Quantity: </h5>
                            </div>
                            <div class="col-8">
                                <div class="input-group">
                                    <input type="number" min=0 class="form-control border-secondary updateQty" value=@cartDetail.Qty />
                                    <div class="input-group-append removeCartDetail">
                                        <button class="btn btn-outline-danger" type="button">Remove</button>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
@section Scripts{
    <script src="~/js/cart.js"></script>
}